{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Debug Scrivomatic",
			"type": "rdbg",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"script": "${file}",
			"args": ["--data-dir=/Users/ian/.local/share/pandoc","-v","test.md"],
			"askParameters": true,
			"rdbgPath": "~/.rbenv/shims/rdbg"
		},
		{ // Name: VSCode rdbg Ruby Debugger https://marketplace.visualstudio.com/items?itemName=KoichiSasada.vscode-rdbg
			"type": "rdbg",
			"name": "Debug < MD",
			"request": "launch",
			"script": "${file}",
			"args": [" < ${workspaceROOT}/test.md"],
			"askParameters": true,
			"rdbgPath": "~/.rbenv/shims/rdbg"
		},
		{ // Name: VSCode rdbg Ruby Debugger https://marketplace.visualstudio.com/items?itemName=KoichiSasada.vscode-rdbg
			"name": "Debug pass test.md",
			"type": "rdbg",
			"request": "launch",
			"script": "${file}",
			"args": ["./test.md"],
			"askParameters": true,
			"rdbgPath": "~/.rbenv/shims/rdbg"
		},
		{ // Name: VSCode rdbg Ruby Debugger https://marketplace.visualstudio.com/items?itemName=KoichiSasada.vscode-rdbg
			"type": "rdbg",
			"name": "Debug current file with rdbg",
			"request": "launch",
			"script": "${file}",
			"args": [],
			"askParameters": true,
			"rdbgPath": "~/.rbenv/shims/rdbg"
		},
		{ // Name: VSCode rdbg Ruby Debugger https://marketplace.visualstudio.com/items?itemName=KoichiSasada.vscode-rdbg
				"type": "rdbg",
				"name": "Attach with Ruby Debug rdbg",
				"request": "attach",
				"rdbgPath": "~/.rbenv/shims/rdbg"
		}
	]
}